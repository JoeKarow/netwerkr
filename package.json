{
  "name": "@joekarow/netwerkr",
  "version": "0.0.0-development",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "design/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:ui": "turbo run dev storybook --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,jsx,js}\"",
    "fresh": "rimraf './**/node_modules' && pnpm install",
    "prepare": "husky install",
    "db": "turbo run db",
    "db:push": "turbo run db:push",
    "db:generate": "turbo run db:generate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "test": "turbo run test",
    "storybook": "turbo run storybook",
    "lint-staged-run": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/cz-commitlint": "^17.0.3",
    "@jest/types": "^28.1.1",
    "@joekarow/netwerkr-config": "workspace:^0.0.0",
    "commitizen": "^4.2.4",
    "cz-git": "^1.3.8",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "turbo": "^1.2.16"
  },
  "engines": {
    "pnpm": ">=7.1.7",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@7.4.1",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "pnpm": {
    "overrides": {
      "minimist@<1.2.6": ">=1.2.6"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "dependencies": {
    "@joekarow/eslint-config-netwerkr": "workspace:^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JoeKarow/netwerkr.git"
  }
}